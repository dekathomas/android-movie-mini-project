<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/profileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Hello,"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Your Name"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
<!--        TODO kalau sempet buatin internationalizationnya (Indo sama Inggris)-->
<!--        string.xml indonya udah disiapin-->
        <Button
            android:id="@+id/settingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_setting"
            android:gravity="start"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_setting"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/informationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_information"
            android:gravity="start"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_information"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/logoutBotton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/roboto"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text=""
        android:textAllCaps="false"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>